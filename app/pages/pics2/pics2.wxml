<!-- pics2.wxml -->
<scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHeight}}px;"
        class="list" bindscrolltolower="bindDownLoad" bindscroll="scroll" bindscrolltoupper="refresh">
<view class="pics2">
    <image style="width:750rpx; height:226rpx;" src="../../images/adv2.jpg"></image>
    <view class="pics2_in">
        <view class="pics2_in_font">
            <ul>
                <view class="pics2_total">
                    <label class="iconfont icon-tupian"></label>
                    <span>200</span>
                </view>
                <li wx:for="{{steps}}" class="{{fid==item.Id? 'active' : ''}}" data-fid="{{item.Id}}" bindtap="changeTab">{{item.Name}}</li>
            </ul>
        </view>
        <view class="pics2_in_bg"></view>
    </view>
</view>


<view class="tab_b">
            <view class="down-item active">
                <image style="width:175rpx; height:175rpx;" src="{{website+item.PhotoUrl}}" wx:for="{{photos}}"></image>
            </view>
</view>
    </scroll-view>
    <loading hidden="{{hidden}}" bindchange="loadingChange">加载中...</loading>


